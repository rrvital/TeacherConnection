<div id="main_content" class="container">
<div id="content" class="col-md-9 center-block">

  <div class="columns is-multiline is-mobile">
  <%# <div class="column is-one-quarter">

  </div> %>

  <div class="column">
   <div class="tabs is-centered">
  <ul>
    <li><a>General</a></li>
    <li><a>Lessons</a></li>
    <li><a>Classroom Management</a></li>
    <li><a>Brags</a></li>
    <li><a>Help Wanted</a></li>
  </ul>
  </div>


<% @forums.each do |forum| %>
  <article class="media">
    <figure class="media-left">
      <% if forum.user.avatar.attached? %>
        <p class="image is-64x64">
          <%= image_tag(forum.user.avatar) %>
        </p>
      <% end %>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to forum.title, forum %></strong> <small><%= forum.user.username %></small> <small><%= time_ago_in_words(forum.created_at) %> ago</small>
         
    <div class="btn-group">
        <a class="btn btn-default btn-sm" href="<%= forum.url %>">Visit Link</a>
        <%= link_to like_forum_path(forum), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon"></span>ğŸ‘
        <%= forum.get_upvotes.size %>
        <% end %>

        <%= link_to dislike_forum_path(forum), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon"></span>ğŸ‘
        <%= forum.get_downvotes.size %>
        <% end %>
      </div>

        </p>
      </div>
    </div>

  </article>
<% end %>

  </div>
</div>



